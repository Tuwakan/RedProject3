<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>SessionInitialisation</servlet-name>
        <servlet-class>SessionInitialisationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionInitialisation</servlet-name>
        <url-pattern>/sessionInitialisation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Authorization</servlet-name>
        <servlet-class>AuthorizationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authorization</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCookies</servlet-name>
        <servlet-class>DeleteCookiesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCookies</servlet-name>
        <url-pattern>/deleteCookies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WriterMessages</servlet-name>
        <servlet-class>WriterMessagesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WriterMessages</servlet-name>
        <url-pattern>/writerMessages</url-pattern>
    </servlet-mapping>
</web-app>